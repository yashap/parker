// Prisma schema file: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(dbgenerated("uuid_generate_v1()")) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  fullName  String

  // Relations
  parkingSpots ParkingSpot[]
}

model ParkingSpot {
  id          String                                @id @default(dbgenerated("uuid_generate_v1()")) @db.Uuid
  createdAt   DateTime                              @default(now())
  updatedAt   DateTime                              @updatedAt
  ownerUserId String                                @db.Uuid
  // TODO: once Prisma supports postgis, make this non-nullable and non-unsupported
  location    Unsupported("GEOMETRY(POINT, 4326)")?

  // Relations
  ownerUser User @relation(fields: [ownerUserId], references: [id])

  // Indexes
  @@index([location], name: "location_idx", type: Gist)
}
