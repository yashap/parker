{
  "name": "@parker/core",
  "version": "0.0.1",
  "main": "./src/main.ts",
  "types": "./src/main.ts",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "clean": "rm -rf node_modules/ dist/",
    "db:init": "../../tools/scripts/ensure_postgres_db.sh -d core && ../../tools/scripts/ensure_postgres_user.sh -u core -w core_password -d core",
    "db:init:test": "../../tools/scripts/ensure_postgres_db.sh -d core -c parker_postgres_test && ../../tools/scripts/ensure_postgres_user.sh -u core -w core_password -d core -c parker_postgres_test",
    "db:migrate": "pnpm db:init && DATABASE_URL='postgresql://dev_admin:dev_admin_password@localhost:5440/core?schema=public' prisma migrate dev",
    "db:migrate:test": "pnpm db:init:test && DATABASE_URL='postgresql://dev_admin:dev_admin_password@localhost:5441/core?schema=public' prisma migrate dev",
    "dev": "nest start --watch",
    "format": "eslint . --ext .ts --fix",
    "generate": "prisma generate",
    "lint": "tsc --noEmit && eslint . --ext .ts",
    "test": "LOG_LEVEL=off jest src/",
    "test:watch": "jest --watch src/"
  },
  "dependencies": {
    "@nestjs/common": "^9.1.6",
    "@nestjs/core": "^9.1.6",
    "@nestjs/mapped-types": "^1.2.0",
    "@nestjs/platform-express": "^9.1.6",
    "@parker/logging": "workspace:*",
    "@parker/nest-utils": "workspace:*",
    "@prisma/client": "^4.5.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "immutable": "^4.1.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.7",
    "tslib": "^2.4.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.6",
    "@parker/tsconfig": "workspace:*",
    "@types/jest": "^29.0.0",
    "@types/lodash": "^4.14.187",
    "@types/node": "^17.0.12",
    "@types/uuid": "^8.3.4",
    "eslint": "7.32.0",
    "eslint-config-custom": "workspace:*",
    "jest": "^29.0.3",
    "prisma": "^4.5.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.5.3"
  }
}
