{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/core/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/core",
        "main": "apps/core/src/main.ts",
        "tsConfig": "apps/core/tsconfig.app.json",
        "assets": ["apps/core/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/core/src/config/config.ts",
              "with": "apps/core/src/config/config.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "core:build"
      },
      "dependsOn": ["devDB"],
      "configurations": {
        "production": {
          "buildTarget": "core:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/core"],
      "options": {
        "jestConfig": "apps/core/jest.config.ts",
        "passWithNoTests": true
      },
      "dependsOn": ["testDB"]
    },
    "devDB": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./tools/scripts/run-postgres-container.sh",
          "npx prisma migrate dev --schema apps/core/prisma/schema.prisma"
        ],
        "parallel": false
      }
    },
    "testDB": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./tools/scripts/run-postgres-container.sh -p 5441 -c parker_postgres_test -v parker_postgres_data_test",
          "DATABASE_URL='postgresql://app:app121@localhost:5441/core?schema=public' npx prisma migrate dev --schema apps/core/prisma/schema.prisma"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
