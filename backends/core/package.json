{
  "name": "@parker/core",
  "version": "0.0.1",
  "private": true,
  "main": "./src/main.ts",
  "types": "./src/main.ts",
  "scripts": {
    "build": "nest build",
    "clean": "rm -rf node_modules/ dist/ coverage/ .turbo/",
    "db:init": "../../tools/scripts/ensure_postgres_db.sh -d core && ../../tools/scripts/ensure_postgres_user.sh -u core -w core_password -d core",
    "db:init:test": "../../tools/scripts/ensure_postgres_db.sh -d core -c parker_postgres_test && ../../tools/scripts/ensure_postgres_user.sh -u core -w core_password -d core -c parker_postgres_test",
    "db:migrate-up": "yarn db:init && NODE_PATH=./src DATABASE_URL='postgresql://dev_admin:dev_admin_password@localhost:5440/core?schema=public' db-migrate --migrations-dir src/migrations up",
    "db:migrate-up:test": "yarn db:init:test && NODE_PATH=./src DATABASE_URL='postgresql://dev_admin:dev_admin_password@localhost:5441/core?schema=public' db-migrate --migrations-dir src/migrations up",
    "db:dump-fixtures": "../../tools/scripts/dump_fixtures.sh core",
    "serve": "nest start --watch",
    "format": "eslint \"src/**\" --fix",
    "lint": "tsc --noEmit && eslint \"src/**\"",
    "test": "LOG_LEVEL=\"${LOG_LEVEL:-off}\" jest --forceExit --runInBand src/",
    "test:watch": "LOG_LEVEL=\"${LOG_LEVEL:-off}\" jest --forceExit --runInBand --watch src/"
  },
  "dependencies": {
    "@js-temporal/polyfill": "^0.4.4",
    "@nestjs/common": "^10.4.1",
    "@nestjs/core": "^10.4.1",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/platform-express": "^10.4.1",
    "@parker/api-client-utils": "*",
    "@parker/core-client": "*",
    "@parker/drizzle-utils": "*",
    "@parker/errors": "*",
    "@parker/geography": "*",
    "@parker/logging": "*",
    "@parker/nest-utils": "*",
    "@parker/time": "*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.1",
    "geo-tz": "^8.0.2",
    "lodash": "^4.17.21",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "supertokens-node": "^20.1.2",
    "tslib": "^2.7.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.4",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@parker/api-client-test-utils": "*",
    "@parker/eslint-config": "*",
    "@parker/test-utils": "*",
    "@parker/tsconfig": "*",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.5.0",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "drizzle-kit": "^0.28.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "~5.5.4"
  }
}
