{
  "name": "@parker/drizzle-utils",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf node_modules/ dist/ coverage/ .turbo/",
    "db:migrate-up:test": "../../tools/scripts/ensure_postgres_db.sh -d drizzle_utils -c parker_postgres_test && ../../tools/scripts/ensure_postgres_user.sh -u drizzle_utils -w drizzle_utils_password -d drizzle_utils -c parker_postgres_test",
    "format": "eslint \"src/**\" --fix",
    "lint": "tsc --noEmit && eslint \"src/**\"",
    "test": "LOG_LEVEL=\"${LOG_LEVEL:-off}\" jest --forceExit --runInBand src/",
    "test:watch": "LOG_LEVEL=\"${LOG_LEVEL:-off}\" jest --forceExit --runInBand --watch src/"
  },
  "dependencies": {
    "@parker/context-propagation": "*",
    "drizzle-orm": "^0.36.1",
    "tslib": "^2.7.0"
  },
  "devDependencies": {
    "@parker/eslint-config": "*",
    "@parker/tsconfig": "*",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "@types/pg": "^8.11.10",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "pg": "^8.13.1",
    "ts-jest": "^29.2.5",
    "typescript": "~5.5.4"
  }
}
